    NeiLov["Nei: Fortsett etter Bind 3"]
    
    SjekkRisk{"Er beskyttelsesbehovet<br/>moderat til høyt?"}
    JaRisk["Ja: Nivå FORSTERKET"]
    NeiRisk["Nei: Nivå MINIMUM"]
    
